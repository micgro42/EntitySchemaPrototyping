{
	"private": true,
	"scripts": {
		"fix": "grunt fix",
		"test": "grunt test",
		"selenium-test": "echo Please run \\`npm run selenium-test -- --spec extensions/EntitySchema/tests/selenium/spec\\` in the mediawiki directory."
	},
	"devDependencies": {
		"eslint-config-wikimedia": "0.16.2",
		"grunt": "1.0.4",
		"grunt-banana-checker": "0.8.1",
		"grunt-eslint": "23.0.0",
		"grunt-jsonlint": "1.1.0",
		"grunt-stylelint": "0.13.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.0",
		"stylelint-config-wikimedia": "0.8.0",
		"wdio-mediawiki": "1.0.0"
	},
	"eslintIgnore": [
		"vendor/**"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		],
		"*.php": [
			"vendor/bin/parallel-lint --colors",
			"vendor/bin/phpcbf",
			"vendor/bin/phpcs -s"
		],
		"*.json": [
			"jsonlint"
		],
		"*.{css,scss,less}": [
			"stylelint --fix",
			"git add"
		]
	}
}
